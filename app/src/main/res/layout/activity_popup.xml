<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/snövit"
    tools:context="se.juneday.thesystembolaget.PopupActivity">

    <ImageView
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/systemlog" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="I'm at least 20 years of age"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:paddingBottom="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:background="@color/systemetgrön"
            android:textColor="@color/systemetgul"
            android:text="Yes"/>

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="wrap_content"></LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:background="@color/systemetgrön"
            android:textColor="@color/systemetgul"
            android:text="No" />
    </LinearLayout>



</LinearLayout>